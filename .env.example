# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de ATV (Hacienda)
# Si estas variables están vacías o faltan, el sistema operará en modo SIMULADO
ATV_KEY_PATH=
ATV_CERT_PATH=
ATV_CLIENT_ID=
ATV_USERNAME=
ATV_PIN=

# Configuración de simulación
SIMULATE_IF_NO_KEYS=true

# Configuración de logging
LOG_LEVEL=info

# Rutas de archivos
INVOICES_DIR=./invoices
CONSECUTIVE_FILE=./src/data/consecutivo.json

# Configuración de la aplicación
MAX_FILE_SIZE=10MB
ALLOWED_MIME_TYPES=application/json,application/xml,application/pdf