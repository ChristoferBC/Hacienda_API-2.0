{
  "name": "hacienda-api",
  "version": "1.0.0",
  "description": "API REST para facturación electrónica con simulación del SDK de ATV",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
